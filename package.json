{
  "name": "restliparams",
  "version": "1.0.3",
  "description": "Js lib to convert a json object into a restli object",
  "main": "dist/index.js",
  "repository": "https://github.com/igbopie/restliparams",
  "author": "igbopie",
  "license": "MIT",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "build": "rm -fR lib; tsc --declaration",
    "add-all": "git add -A",
    "test": "jest",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "release": "release-it"
  },
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test",
    "build",
    "add-all"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.106",
    "jest": "^24.0.0",
    "pre-commit": "^1.2.2",
    "release-it": "^14.2.1",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.0",
    "tslint": "^5.9.1",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.5"
  },
  "types": "./lib/index.d.ts",
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts}",
      "!src/examples/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
